@model CateringOrder

@{ 
    ViewData["Title"] = "Checkout Wholesale";
}

<h2>Checkout Catering</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="panel-body">
            <form asp-action="CateringTotals" method="get">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NumberOfTacos" class="control-label"></label>
                    <input class="form-control" type="number" asp-for="NumberOfTacos"/>     
                    <span asp-validation-for="NumberOfTacos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfSandwiches" class="control-label"></label>
                    <input type="number" asp-for="NumberOfSandwiches" class="form-control" />
                    <span asp-validation-for="NumberOfSandwiches" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerCode" class="control-label"></label>
                    <input type="text" asp-for="CustomerCode" class="form-control" />
                    <span asp-validation-for="CustomerCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryFee" class="control-label"></label>
                    <input type="number" asp-for="DeliveryFee" class="form-control" />
                    <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">                        
                            <input type ="checkbox" id="PreferredCustomer" name="PreferredCustomer" value="True" />
                            <label asp-for="PreferredCustomer">Is this a preferred customer?</label>                       
                    </div>
                </div>
                <button type="Submit" class="btn btn-info">Submit</button>
                <br />
                <br />
                <div>
                    <a asp-action="Index">Start A New Order</a>
                </div>
            </form>
        </div>
    </div>
</div>